model UserStreak {
    id               String    @id @default(cuid())
    userId           String    @unique
    currentStreak    Int       @default(0) // consecutive days
    longestStreak    Int       @default(0) // personal best
    lastActivityDate DateTime? // last day user was active
    streakStartDate  DateTime? // when current streak started
    totalActiveDays  Int       @default(0) // lifetime active days
    createdAt        DateTime  @default(now())
    updatedAt        DateTime  @updatedAt

    // Relations
    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
    @@index([lastActivityDate])
    @@index([currentStreak])
}
